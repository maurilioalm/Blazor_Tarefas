<td><button @onclick="@(() => RemoveTarefa.InvokeAsync(item))"><i class="oi oi-trash"></i></button></td>
<td>@item.DataCriacao</td>
<td>@item.Descricao</td>
<td><input type="checkbox" @bind="item.Concluida" />@item.Concluida</td>

@code {
    [Parameter] public Tarefa item { get; set; }
    //Passagem de um evento como paramentro
    [Parameter] public EventCallback<Tarefa> RemoveTarefa { get; set; }
}
